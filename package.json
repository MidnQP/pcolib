{
  "name": "postman-collection-interface",
  "type": "module",
  "version": "1.0.0",
  "description": "Easy interface to work with folders, requests, and examples of a Postman collection. Mainly to use Postman examples as mock data in mocha+chai tests.",
  "author": "Muhammad",
  "license": "MIT",
  "main": "./dist/src/index.js",
  "exports": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "dev": "tsc-watch --compiler ./node_modules/.bin/ttsc --noClear --onSuccess 'mpv bin/ok.wav --no-terminal' --onFailure 'mpv bin/err.wav --no-terminal'",
    "postinstall": "npm run build",
    "test": "export $(cat .env | xargs) && mocha 'dist/examples/**/*.example.js'"
  },
  "keywords": [
    "test",
    "postman"
  ],
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/lodash": "^4.14.182",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.32",
    "@types/postman-collection": "^3.5.7",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "chai": "^4.3.6",
    "husky": "^8.0.1",
    "lodash": "^4.17.21",
    "mocha": "^10.0.0",
    "mocha-steps": "^1.3.0",
    "npm": "^8.10.0",
    "postman-collection": "github:postmanlabs/postman-collection",
    "ttypescript": "^1.5.13",
    "typescript-is": "^0.19.0",
    "zx": "^6.1.0"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "chalk": "^5.0.1",
    "dotenv": "^16.0.1",
    "typescript": "^4.6.4"
  }
}
